<br><br><br><br><br>
<div>
  <ol class="breadcrumb">
    <li><a href="<%= function_path %>"  style="color: blue;">Home</a></li>
    <li class="active">Post</li>
  </ol>
</div>
<div class="list-group">
  <% @user.each do |user| %>
    <% user.rposts.each do |r| %>
    <a href="<%= detail_post_path(r.id) %>" class="list-group-item list-group-item-info">
    	<p style="margin-bottom: 1.4em ; font-size: 0.8em">作者：<%= r.user.username %></p>
    	<div style="margin-left: 25px">
    		<h3 class="list-group-item-heading"><%= r.title %></h4>
      	<p class="list-group-item-text"><%= r.content %></p>
    	</div>
    </a>
    <% end %>
  <% end %>
</div>
<div>
	<a class="btn btn-info" href="<%= make_post_path %>" role="button">发布帖子</a>
</div>

